/**
  path: /assets/wxss/imageText.wxss
  作者:  lingfe 
  时间:  2018-09-26
  名称:  图片与文字布局
  描述:  
  wxml:
      <!-- tabs内容部分  start-->
      <view class="weui-tab__content" wx:for="{{info.tabs}}" wx:key="{{item}}" hidden="{{activeIndex != index }}">
        <view class='tab_content'>
            <!-- 模块标题 start  -->
            <view class='content_title' wx:if="{{info.projectIntroduction[index].title !=null}}">
              {{info.projectIntroduction[index].title}}
            </view>
            <!-- 模块标题 end  -->
            
            <!-- 模块内容 start  -->
            <view class='content_pro' wx:for-item="pro" wx:for="{{info.projectIntroduction[index].content}}" wx:key="*this">
              <!-- 内容content -->
              <view class='pro_content' wx:if="{{pro.content != null}}">{{pro.content}}
                <!-- 加粗的内容content_Bold -->
                <span class='content_Bold' wx:if="{{pro.content_Bold != null}}">{{pro.content_Bold}}</span>
              </view>
              <!-- 内容加粗content_Bold -->
              <view class='pro_content' wx:elif="{{pro.content_Bold != null}}">
                <span class='content_Bold' wx:if="{{pro.content_Bold != null}}">{{pro.content_Bold}}</span>
              </view>
              <!-- 标题title -->
              <view class='img_title' wx:if="{{pro.title != null}}">{{pro.title}}</view>
              <!-- 图片img -->
              <image mode="widthFix" wx:if="{{pro.img !=null}}" class='pro_img' src='{{pro.img}}'></image>
            </view>
            <!-- 模块内容 end  -->
        </view>
        <view class='bottom'></view>
      </view>
      <!-- tabs内容部分  end-->

**/

.weui-tab__content{
  width:100%;
  height: auto;
}
.tab_content{
  font-size:26rpx;
  width: 100%;
  margin:auto;
  line-height:30rpx;
  padding-top:20rpx;
  padding-bottom:20rpx;
  background-color:#fff;
  margin-top: 20rpx;
  margin-bottom: 30rpx;
}
.content_pro{
  width: 96%;
  margin: auto;
}
.pro_title{
  width: 100%;
  font-size: 30rpx;
  font-weight: bold;
  padding: 30rpx;
}
.pro_content{
  letter-spacing: 2rpx;
  line-height: 54rpx;
  font-size: 28rpx;
  color: #868686;
  padding: 30rpx;
}
.content_Bold{
  font-weight:bold;
}
.pro_img{
   width: 100%;
   height: 350rpx;
 }
 .img_text{
  width: 100%;
  font-size: 22rpx;
  overflow: hidden; /**自动隐藏文字*/
  text-overflow: ellipsis;/**文字隐藏后添加省略号*/
  white-space: nowrap;/**强制不换行*/
  text-align: center;
  height: 50rpx;
  line-height: 40rpx;
  color: #aaa;
}
.bottom{
   width: 100%;
   height: 30rpx;
 }