.model0_hot-item-top {
    display: flex;
    width: 100%;
    height: 220rpx;
    padding: 30rpx;
    box-sizing: border-box;
    overflow: hidden;
    background-color: rgb(255,255,255);
    border-bottom:1rpx solid #aaa;

}

.model0_hot-img, .model0_hot-img image {
    width: 160rpx;
    height: 160rpx;
}

.model0_hot-item-top-right {
    width: 506rpx;
    height: 160rpx;
    margin-left: 24rpx;
}

.model0_hot-item-title {
    display: block;
    width: 100%;
    height: 40rpx;
    margin: -4rpx 0 30rpx 0;
    line-height: 40rpx;
    font-size: 32rpx;
    color: #444;
    white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;
}

.model0_hot-item-price {
    margin-bottom: 30rpx;
    font-size: 28rpx;
    color: #fb5d5d;
    overflow:hidden;
text-overflow:ellipsis;
white-space:nowrap;

}

.model0_hot-item-No-time-box {
    display: flex;
    width: 100%;
    height: 36rpx;
    line-height: 36rpx;
    font-size: 24rpx;
    color: #999;
}

.model0_hot-item-No {
    width: 50%;
    overflow: hidden;
text-overflow:ellipsis;
white-space: nowrap;
}

.model0_text-red {
    color: #fb5d5d;
}

.hot-item-time {
    width: 300rpx;
    text-align: right;
}

.model0_hot-item-btm {
    display: flex;
    width: 100%;
    height: 92rpx;
    padding: 22rpx 30rpx;
    box-sizing: border-box;
    background-color: rgba(255,255,255,.7); 
    font-size: 28rpx;
    border-bottom:1rpx solid #aaa;
}

.model0_hot-item-user-box {
    display: flex;
    width: 580rpx;
    height: 48rpx;
    overflow: hidden;
}

.model0_hot-item-user-img {
    width: 48rpx;
    height: 48rpx;
    margin-right: 20rpx;
}

.model0_hot-item-user-box image {
    width: 48rpx;
    height: 48rpx;
    border-radius: 50%;
    overflow: hidden;
}

.model0_hot-item-btn {
    display: block;
    width: 120rpx;
    height: 48rpx;
    line-height: 48rpx;
    font-size: 28rpx;
    color: #fb5d5d;
    text-align: center;
    border: 1rpx solid #fb5d5d;
    border-radius: 4rpx;
    box-sizing: border-box;
}

.model0_hot-item-btn:active{
   color: #aaa;
   border: #aaa;
   box-shadow: 2px 2px 5px #aaa;
 }

.model0_promptHide {
    display: none;
}

/*未认证   此银色提醒用户谨慎*/
.model0_text-0{
  color: magenta;
}
/*已认证，未实名*/
.model0_text-1{
  color: blue;
}
/*已认证,已实名*/
.model0_text-2{
  color: green;
}
