@import '/assets/wxss/tabsMenu.wxss';

  page{
   background-color: #e8efef;
 }
 
 .neiro{
   width: 100%;
   height: 100%;
 }

 .neiro_model{
   width: 100%;
   margin: auto;
   height: auto;
   background-color: #fff;
 }
 .model_img{
   width: 100%;
   height: auto;
   padding-top: 0rpx;
   padding-bottom: 10rpx;
 }
 .img{
   width: 100%;
   height: 350rpx;
 }
 .model_title{
   width: 97%;
   height: 70rpx;
   line-height: 70rpx;
   font-size: 34rpx;
     overflow: hidden; /**自动隐藏文字*/
  text-overflow: ellipsis;/**文字隐藏后添加省略号*/
  white-space: nowrap;/**强制不换行*/
  margin-left:20rpx;
 }
 .model_content{
   width: 97%;
   height: auto;
   max-height: 200rpx;
   font-size: 28rpx;
   color: #868686;
   margin-left:20rpx;
   padding-bottom: 30rpx;
 }
 .model_style{
   width: 97%;
  height: 50rpx;
  margin: auto;
  line-height: 50rpx;
  margin-left:20rpx;
  padding-bottom: 20rpx;
 }
 .data_biaoqian_view{
  font-size: 22rpx;
  float: left;
  color: #AAA;
  overflow: hidden; /**自动隐藏文字*/
  text-overflow: ellipsis;/**文字隐藏后添加省略号*/
  white-space: nowrap;/**强制不换行*/
  margin-right: 4%;
}
.data_biaoqian_view image{
  height: 22rpx;
  width: 22rpx;
  position: relative;
  top: 3rpx;
}


/*tab 内容*/
.weui-tab__panel {
  box-sizing:border-box;
  height:49%;
  padding-top:20rpx;
  overflow:auto;
  padding-bottom:57rpx; 
  -webkit-overflow-scrolling:touch;
  background-color: #E8EFEF;
}

/*底部内容*/
.dibu{
  width: 100%;
  height: 90rpx;
  position: fixed;
  bottom: -1rpx;
  background-color: #fff;
  border-top: 1rpx solid #eee;
}
.dibu_img{
  width: 60%;
  float: left;
  height: 90rpx;
  line-height:90rpx;
  margin-left:20rpx;
}
 .img_info{
  font-size: 26rpx;
  float: left;
  color: #AAA;
  overflow: hidden; /**自动隐藏文字*/
  text-overflow: ellipsis;/**文字隐藏后添加省略号*/
  white-space: nowrap;/**强制不换行*/
  margin-right: 8%;
  margin-left: 2%;
}
.img_info image{
  height: 34rpx;
  width: 34rpx;
  position: relative;
  top: 6rpx;
}
.dibu_btn_false{
  width: 20%;
  float: right;
  height: 60rpx;
  margin-top:15rpx;
  margin-right:20rpx;
  background-color: #330066;
  border-radius:14rpx;
  font-size:26rpx;
  text-align:center;
  line-height:60rpx;
  color:#fff;
}

.dibu_btn_ture{
  width: 20%;
  float: right;
  height: 60rpx;
  margin-top:15rpx;
  margin-right:20rpx;
  background-color: #999;
  border-radius:14rpx;
  font-size:26rpx;
  text-align:center;
  line-height:60rpx;
  color:#fff;
}
.dibu_btn_ture dibu_btn_false:active{
  opacity: 0.7;
}

