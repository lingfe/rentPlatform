/* pages/indexTo/restaurantFood/restaurantFood.wxss */
/* 轮播图 */
@import '/assets/wxss/lbt.wxss';
/*信息来源*/
@import '/assets/wxss/infoSources.wxss';
/*标签+描述*/
@import '/assets/wxss/label_and_description.wxss';
/* 菜单导航*/
@import '/assets/wxss/tabsMenu.wxss';
/*图片与文字布局*/
@import '/assets/wxss/imageText.wxss';
/*底部*/
@import '/assets/wxss/bottom.wxss';

.model_content{
  padding-bottom:30rpx;
  text-align: center;
  padding-top: 20rpx;
}
.weui-tab{
  border-top: 1rpx solid #eee;
  border-bottom: 1rpx solid #eee;
  top:0rpx;
}
.infoSource {
  margin-top: 0rpx;
}


.tabs_content{
  display: flex;
  padding-bottom:100rpx;
}
.nav_left{
  display: inline-block;
  width: 25%;
  height: 100%;
  background: #f5f5f5;
  text-align: center;
}
.nav_left .nav_left_items{
  height: 30px;
  line-height: 30px;
  padding: 6px 0;
  border-bottom: 1px solid #dedede;
  font-size: 14px;
}
.nav_left .nav_left_items.active{
  background: #fff;
}

.nav_right{
  flex: 1;
  width: 75%;
  height: 100%;
  padding: 10px;
  background: #fff;
  box-sizing: border-box;
}
.nav_right .nav_right_items{
  float: left;
  width: 100%;
  text-align: center;
  border:1rpx solid #eee;
  margin-bottom: 10rpx;
  padding-bottom: 10rpx;
}
.nav_right .nav_right_items image{
  width: 100%;
  height: 300rpx;
}
.nav_right_items:hover{
  opacity: 0.5;
}
.nav_right_items_param{
  width: 100%;
  text-align: center;
}
.nav_right_items_title{
  width: 100%;
  font-size: 34rpx;
  padding-top: 10rpx;
  padding-bottom: 10rpx;
}
.nav_right_items_price{
  width: 100%;
  text-align: center;
  display: flex;
}
.nav_right_items_price_param{
  font-size: 26rpx;
  width: 50%;
}
.nav_right_items_jia{
  width: 50rpx;
  height: 50rpx;
  line-height: 45rpx;
  font-size: 30rpx;
  background-color: #330066;
  color: #fff;
  border-radius: 50%;
  margin-right: 6%;
  position: absolute;
}
.nav_right_items_jia:active{
  opacity: 0.5;
}

